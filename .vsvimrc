"place this document in ~  
:set nonumber
:set relativenumber

nmap <C-O> :vsc View.NavigateBackward<CR>
nmap <C-I> :vsc View.NavigateForward<CR>

" backspace in Visual mode deletes selection
vnoremap <BS> d

map <C-p> :vsc Edit.NavigateTo<cr>
nnoremap gd :vsc Edit.GoToDefinition<CR>
nnoremap gr :vsc Edit.FindAllReferences<cr>
nnoremap gp :vsc Edit.PeekDefinition<cr>

" break out of the tyranny of text! Navigate by method
nnoremap <space>m :vsc Edit.NextMethod<cr>
nnoremap <space>M :vsc Edit.PreviousMethod<cr>

nnoremap <space> f :vsc Edit.FormatDocument<cr>
nnoremap R :vsc Refactor.Rename<cr>

" testing and debugging
nnoremap <space>r :vsc TestExplorer.RunAllTestsInContext<cr>
nnoremap <space>R :vsc TestExplorer.DebugAllTestsInContext<cr>

" open the change parameter window, a bit fake because it's not a text-object
nnoremap cia :vsc Refactor.ReorderParameters<cr>

nnoremap <space>b :vsc Build.BuildSolution<cr>
nnoremap <space>B :vsc Build.Cancel<cr>

" jump between compilation errors
nnoremap <space>e :vsc View.NextError<cr>
nnoremap <space>E :vsc View.PreviousError<cr>

nmap <space>h :vsc EditorContextMenus.CodeWindow.ToggleHeaderCodeFile<cr>
nnoremap <space>k :vsc Debug.Dissembly<cr>
nnoremap <space>gm :vsc Edit.GenerateMethod<cr>
nnoremap <space>e :vsc Edit.GoToBrace<cr>

"for commenting and uncommenting
nnoremap <space>u :vsc Edit.UncommentSelection<cr>
nnoremap <space>c :vsc Edit.CommentSelection<cr>
vnoremap <space>u :vsc Edit.UncommentSelection<cr>
vnoremap <space>c :vsc Edit.CommentSelection<cr>
snoremap <space>u :vsc Edit.UncommentSelection<cr>
snoremap <space>c :vsc Edit.CommentSelection<cr>

set scrolloff=8

nmap <tab> >> <cr>
nmap <s-tab> << <cr>