"languageserver": {
    "ccls": {
        "command": "ccls",
        "filetypes": [
            "c",
            "cpp",
            "c++",
            "objc",
            "objcpp"
        ],
        "rootPatterns": [
            ".ccls",
            "compile_commands.json",
            ".vim/",
            ".git/",
            ".hg/"
        ],
        "initializationOptions": {
            "cache": {
                "directory": "/tmp/ccls"
            }
        }
    }
},
